@model Blog.Helper.PaginatedList<Blog.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!--Section: Content-->
    <section class="text-center">
        <h4 class="mb-5"><strong>Latest posts</strong></h4>

        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-12 mb-4">
                        <div class="card">
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img src="@item.Image" class="img-fluid" />
                                <a href="#!">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">
                                    @item.ShortDescription
                                </p>
                                <a href="#" class="btn btn-primary">Read</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>
    <!--Section: Content-->
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <!-- Pagination -->
    <nav class="my-4" aria-label="...">
        <ul class="pagination pagination-circle justify-content-center">
            <li class="page-item">
                <a asp-action="Index" asp-route-pageNumber="@Model.PageIndex-1" class="page-link @prevDisabled">Previous</a>
            </li>
            
            <li class="page-item">
                <a asp-action="Index" asp-route-pageNumber="@Model.PageIndex+1" class="page-link @nextDisabled" >Next</a>
            </li>
        </ul>
    </nav>
</div>

